<Window x:Class="RetroRommer.Core.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
        Style="{StaticResource UiWindow}"
        Background="{DynamicResource ApplicationBackgroundBrush}"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="MainWindow" Height="500" Width="620" WindowStartupLocation="CenterScreen" MinHeight="400" MinWidth="620">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <wpfui:TitleBar Title="RetroRommer" Grid.Row="0"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Label Content="MAME Miss file:" Width="110" Margin="20" VerticalAlignment="Top"/>
            <wpfui:TextBox x:Name="TextBoxFilename" Width="350" Margin="10" TextWrapping="Wrap" VerticalAlignment="Top" VerticalContentAlignment="Center"/>
            <wpfui:Button x:Name="ButtonSelectFile" Content="Select" Margin="10" VerticalAlignment="Top" Click="ButtonSelectFile_Click"/>
        </StackPanel>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Label Content="Destination folder:" Width="110" Margin="20" VerticalAlignment="Top"/>
            <wpfui:TextBox x:Name="TextBoxDestination" Width="350" Margin="10" TextWrapping="Wrap" VerticalAlignment="Top" VerticalContentAlignment="Center"/>
            <wpfui:Button x:Name="ButtonSelectDestination" Content="Select" Margin="10" VerticalAlignment="Top" Click="ButtonSelectDestination_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal">
            <Label Content="Download website:" Width="110" Margin="20" VerticalAlignment="Top"/>
            <wpfui:TextBox x:Name="TextBoxWebsite" Width="350" Margin="10" TextWrapping="Wrap" VerticalAlignment="Top" VerticalContentAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal">
            <Label Content="Username:" Width="70" HorizontalAlignment="Left" Margin="20" VerticalAlignment="Top"/>
            <wpfui:TextBox x:Name="TextBoxUsername" Width="200" Margin="10" TextWrapping="Wrap" VerticalAlignment="Top" VerticalContentAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="5" Orientation="Horizontal">
            <Label Content="Password:" Width="70" HorizontalAlignment="Left" Margin="20" VerticalAlignment="Top"/>
            <wpfui:PasswordBox x:Name="PBoxPassword" Width="200" Margin="10" VerticalAlignment="Top" VerticalContentAlignment="Center"/>
        </StackPanel>
 
        <StackPanel Grid.Row="6" Orientation="Horizontal">
            <wpfui:Button x:Name="ButtonDownload" Content="Begin Downloads" Width="150" Margin="20" VerticalAlignment="Bottom" Click="ButtonDownload_Click" IsDefault="True"/>
            <wpfui:Button x:Name="ButtonAbort" Content="Abort" Width="150" Margin="20" Click="ButtonAbort_OnClick" IsEnabled="False" IsCancel="True"/>
        </StackPanel>

        <ListView x:Name="LvLog" Grid.Row="7" Margin="5" ItemsSource="{Binding LogCollection}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Filename" Width="400" DisplayMemberBinding="{Binding Filename}"/>
                    <GridViewColumn Header="Result" Width="200" DisplayMemberBinding="{Binding Result}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
